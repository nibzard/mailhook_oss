# Application
APP_NAME=MailhookOSS
APP_VERSION=1.0.0
DEBUG=true
LOG_LEVEL=INFO

# API
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1
CORS_ORIGINS=["*"]

# Database
DATABASE_URL=postgresql+asyncpg://mailhook:mailhook@localhost:5432/mailhook

# Redis
REDIS_URL=redis://localhost:6379/0

# S3 Storage
S3_ENDPOINT=http://localhost:9000
S3_BUCKET=mailhook
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_REGION=us-east-1

# AWS SES (use localstack for development)
SES_REGION=us-east-1
SES_ACCESS_KEY=test
SES_SECRET_KEY=test
SES_CONFIGURATION_SET=

# Security
API_KEY_SECRET=change-this-to-a-random-secret-key
SIGNED_URL_SECRET=change-this-to-another-random-secret-key
SIGNED_URL_EXPIRATION=3600

# Pagination
DEFAULT_PAGE_SIZE=50
MAX_PAGE_SIZE=100

# Webhooks
WEBHOOK_TIMEOUT=30
WEBHOOK_MAX_RETRIES=5

# Workers
WORKER_CONCURRENCY=10
